{
  "version": 2,
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/ticker/(.*)",
      "destination": "/public/ticker.html"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/favicon.png",
      "destination": "/public/favicon.png",
      "permanent": false
    },
    {
      "source": "/incomemachine_horizontallogo.png", 
      "destination": "/public/incomemachine_horizontallogo.png",
      "permanent": false
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
} 